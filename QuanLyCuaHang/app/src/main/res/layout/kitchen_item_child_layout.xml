<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/custom_corners"
    android:orientation="horizontal"
    android:weightSum="10">


    <ImageView
        android:id="@+id/img_Anhsanpham_Nhabep"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/img_coca"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenmon_Nhabep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:text="Coca cola"
            android:textColor="@color/colorRed"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/txtSoluong_Nhabep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/segoeui"
            android:gravity="center_vertical"
            android:text="Số lượng : 1"
            android:textColor="@color/colorXam"
            android:textSize="20dp"></TextView>
    </LinearLayout>

</LinearLayout>