<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/custom_corners"
    android:orientation="horizontal"
   >


    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/img_Anhsanpham_Nhabep"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_coca"></ImageView>

    <LinearLayout
        android:paddingLeft="65dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibribold"
                android:text="Tên món   : "

                android:textSize="20dp"></TextView>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/txtTenmon_Nhabep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibribold"
                android:text="Coca cola"
                android:textColor="@color/colorRed"
                android:textSize="20dp"></TextView>

        </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/calibribold"
               android:gravity="center_vertical"
               android:text="Số lượng   :"
               android:textColor="@color/colorXam"
               android:textSize="20dp"></TextView>
           <TextView
               android:layout_marginLeft="20dp"
               android:id="@+id/txtSoluong_Nhabep"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/calibribold"
               android:text="1"
               android:textColor="@color/colorRed"
               android:textSize="20dp"></TextView>
       </LinearLayout>




    </LinearLayout>

</LinearLayout>