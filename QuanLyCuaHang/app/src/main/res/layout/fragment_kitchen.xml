                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Số lượng : 1"
                    android:textColor="@color/colorXam"
                    android:textSize="20dp"></TextView>
            </LinearLayout>

            <CheckBox
