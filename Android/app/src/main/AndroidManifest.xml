<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen" android:theme="@style/SplashScreen">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.Login" android:theme="@style/Login"></activity>
        <activity android:name=".Activities.Signup" android:theme="@style/Login"></activity>
        <activity android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.Detail_Products" android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.Cart" android:theme="@style/AppTheme"></activity>
    </application>

</manifest>