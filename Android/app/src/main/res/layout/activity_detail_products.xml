<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cvDetail_Products"
        android:layout_height="250dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_above="@+id/rgOptions"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/txtBillProductsName"
                android:textColor="@color/colorText"
                android:textSize="16dp"
                android:layout_marginLeft="150dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:src="@drawable/no_image"
                android:id="@+id/imgBilPicture"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBillPrice"
                    android:textColor="@color/colorText"
                    android:textSize="16dp"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:text="$"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm:"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBillID"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cvDetail_Products"
        android:orientation="vertical">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Chọn màu"
            android:textColor="@color/colorText"
            android:textSize="14dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rdgColor"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/black"
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="6dp"/>
            <RadioButton
                android:id="@+id/cbBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đen"
                android:textColor="#eeeeee">

            </RadioButton>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/blue"
                android:layout_marginLeft="40dp"
                android:layout_marginVertical="6dp"/>
            <RadioButton
                android:id="@+id/cbBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xanh"
                android:textColor="#eeeeee" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/white"
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="6dp"/>
            <RadioButton
                android:id="@+id/cbWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trắng"
                android:textColor="#eeeeee"/>

        </RadioGroup>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Chọn kích thước"
            android:textColor="@color/colorText"
            android:textSize="14dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rdgSize"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbSizeS"
                android:text="S"
                android:textSize="14dp"
                android:layout_marginLeft="40dp"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbSizeM"
                android:text="M"
                android:textSize="14dp"
                android:layout_marginLeft="40dp"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbSizeL"
                android:text="L"
                android:textSize="14dp"
                android:layout_marginLeft="40dp"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbSizeXL"
                android:text="XL"
                android:textSize="14dp"
                android:layout_marginLeft="40dp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textSize="20dp"
            android:id="@+id/lbAcount"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorText"/>



            <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtAccount"
            android:inputType="numberDecimal"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="Thêm vào giỏ hàng"
            android:id="@+id/btnAddCart"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>



</RelativeLayout>