<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginAdminActivity">
    <TextView
        android:id="@+id/adminapp_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text=" SHOP ONLINE"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/adminlogin_inputphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminapp_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:background="@color/background"
        android:hint="Phone number"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:textSize="17sp"


        android:textStyle="bold" />

    <EditText
        android:id="@+id/adminlogin_inputpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminlogin_inputphonenumber"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:background="@color/background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/adminlogin_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/adminlogin_inputpassword"
        android:layout_marginTop="5dp"
        >

        <CheckBox
            android:id="@+id/adminlogin_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/adminlogin_linerlayout"
            android:text="Remember"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:id="@+id/adminlogin_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:layout_marginLeft="140dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/adminLogin_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminlogin_linerlayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:text="AdminLogin"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/adminLogin_notadmin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/adminLogin_button_login"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="0dp"
        android:text="Not Admin"
        android:textAlignment="center"
        android:textColor="@color/background"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>